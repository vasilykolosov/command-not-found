# This script will look-up command in the database and suggest
# installation of packages available from the repository

function preexec() {
	command="${1%% *}"
}

function precmd() {
	(($?)) && [ -n "$command" ] && {
		whence -- "$command" >& /dev/null ||
			/usr/bin/python /usr/bin/command-not-found -- "$command"
		unset command
	}
}

